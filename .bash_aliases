# one character
alias g="git"
alias l="ls -1"
alias p="pwd"
alias t="todo"
alias v="vim"
alias w="web"
alias y="youtube"

# ls
alias la="l -A"
alias lal="ls -Al"
alias lc="ls"
alias lca="ls -A"
alias ll="ls -l"
alias ls="ls --color=auto -F -h"

# git
alias ga="git add"
alias gap="git add --patch"
alias gb="git branch"
alias gc="git commit"
alias gca="git commit --amend"
alias gd="git diff"
alias gds="git diff --staged"
alias gf="git fetch"
alias gl="git log --graph --date='format:%Y-%m-%d %H:%M' --pretty='format:%C(yellow)%h %Cred%ad %Cblue%an%Cgreen%d %Creset%s'"
alias gp="git pull"
alias gs="git status"
alias gss="git status --short"

# apt-get
alias purge="sudo apt-get purge"
alias spurge="sudo apt-get -s purge"
alias supinstall="sudo apt-get update && sudo apt-get -s install"
alias upinstall="sudo apt-get update && sudo apt-get install"

# misc
alias ..="cd .."
alias diff="diff --color=auto"
alias grep="grep --color=auto"
